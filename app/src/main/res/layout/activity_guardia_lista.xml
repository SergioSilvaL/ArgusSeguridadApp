<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_guardia_lista"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.legible.seguridadargusapp.View.GuardiaListaActivity"
    android:weightSum="1">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_guardia_lista"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout_Cambio_de_fecha"
        android:layout_margin="35dp">

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonRestarFecha"
            android:layout_weight="1"
            android:textSize="36sp"
            android:textStyle="normal|bold"
            android:gravity="center"/>

        <TextView
            android:text="20170302"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewFechaSim"
            android:layout_weight="1"
            android:textSize="36sp"
            android:textStyle="normal|bold"
            android:gravity="center" />

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSumarFecha"
            android:layout_weight="1"
            android:textSize="36sp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_guardia_lista"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
